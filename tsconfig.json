{
  "extends": "@polkadot/dev/config/tsconfig",
  "exclude": [
    "build/**/*",
    "**/build/**/*",
    "docker/**/*",
    "node_modules/**/*",
    "**/node_modules/**/*"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "paths": {
      "@polkadot/apps-config/*": [ "packages/apps-config/src/*" ],
      "@polkadot/apps-routing": [ "packages/apps-routing/src" ],
      "@polkadot/apps-routing/*": [ "packages/apps-routing/src/*" ],
      "@polkadot/app-123code": [ "packages/page-123code/src" ],
      "@polkadot/app-123code/*": [ "packages/page-123code/src/*" ],
      "@polkadot/app-accounts": [ "packages/page-accounts/src" ],
      "@polkadot/app-accounts/*": [ "packages/page-accounts/src/*" ],
      "@polkadot/app-contracts": [ "packages/page-contracts/src" ],
      "@polkadot/app-contracts/*": [ "packages/page-contracts/src/*" ],
      "@polkadot/app-dashboard": [ "packages/page-dashboard/src" ],
      "@polkadot/app-dashboard/*": [ "packages/page-dashboard/src/*" ],
      "@polkadot/app-explorer": [ "packages/page-explorer/src" ],
      "@polkadot/app-explorer/*": [ "packages/page-explorer/src/*" ],
      "@polkadot/app-generic-asset": [ "packages/page-generic-asset/src" ],
      "@polkadot/app-generic-asset/*": [ "packages/page-generic-asset/src/*" ],
      "@polkadot/app-i18n": [ "packages/page-i18n/src" ],
      "@polkadot/app-i18n/*": [ "packages/page-i18n/src/*" ],
      "@polkadot/app-js": [ "packages/page-js/src" ],
      "@polkadot/app-js/*": [ "packages/page-js/src/*" ],
      "@polkadot/app-settings": [ "packages/page-settings/src" ],
      "@polkadot/app-settings/*": [ "packages/page-settings/src/*" ],
      "@polkadot/app-staking": [ "packages/page-staking/src" ],
      "@polkadot/app-staking/*": [ "packages/page-staking/src/*" ],
      "@polkadot/app-nomination": [ "packages/page-nomination/src" ],
      "@polkadot/app-nomination/*": [ "packages/page-nomination/src/*" ],
      "@polkadot/app-sudo": [ "packages/page-sudo/src" ],
      "@polkadot/app-sudo/*": [ "packages/page-sudo/src/*" ],
      "@polkadot/react-api": [ "packages/react-api/src" ],
      "@polkadot/react-api/*": [ "packages/react-api/src/*" ],
      "@polkadot/react-components": [ "packages/react-components/src" ],
      "@polkadot/react-components/*": [ "packages/react-components/src/*" ],
      "@polkadot/react-hooks": [ "packages/react-hooks/src" ],
      "@polkadot/react-hooks/*": [ "packages/react-hooks/src/*" ],
      "@polkadot/react-params": [ "packages/react-params/src" ],
      "@polkadot/react-params/*": [ "packages/react-params/src/*" ],
      "@polkadot/react-query": [ "packages/react-query/src" ],
      "@polkadot/react-query/*": [ "packages/react-query/src/*" ],
      "@polkadot/react-signer": [ "packages/react-signer/src" ],
      "@polkadot/react-signer/*": [ "packages/react-signer/src/*" ]
    },
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@polkadot/ts",
      "./node_modules/@types"
    ]
  }
}
